@model List<Product>

    <div class="container">
        <div class="row pt-4 pb-3">
        <div class="col-6 rounded text-center bg-info">
            <h2>Product list</h2>
            </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Product
            </a>
        </div>
    </div>
    </div>

<table id="tblData" class="table table-bordered table-striped  table-secondary">
    <thead>
        <tr>
            <th>Product Title</th>
            <th>ISBN</th>
            <th>Author</th>
            <th>List Price</th>
            <th>Category</th>
            <th>Action</th>
        </tr>
    </thead>
</table>

@section Scripts{
    <script src="~/js/product.js" ></script>
}

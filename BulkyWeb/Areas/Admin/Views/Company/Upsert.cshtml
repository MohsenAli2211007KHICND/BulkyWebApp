@model Company

<form method="post" enctype="multipart/form-data">
    <input asp-for="Id" hidden />

    <div class="row">
        <div class="col-12">
            <div class="border p-3 my-4">
                <div class="row pb-2">
                    <h2 class="text-white">@(Model.Id != 0 ? "Update" : "Create") Company</h2>
                    <hr />
                </div>
                <div class="mb-3 p-1">
                    <label asp-for="Name" class="p-0"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3 p-1">
                    <label asp-for="City" class="p-0 text-muted"></label>
                    <input asp-for="City" class="form-control"></input>
                </div>
                <div class="mb-3 p-1">
                    <label asp-for="State" class="p-0"></label>
                    <input asp-for="State" class="form-control" />
                </div>
                <div class="mb-3 p-1">
                    <label asp-for="PostalCode" class="p-0"></label>
                    <input asp-for="PostalCode" class="form-control" />
                </div>
                <div class="mb-3 p-1">
                    <label asp-for="StreetAddress" class="p-0"></label>
                    <input asp-for="StreetAddress" class="form-control" />
                </div>
                <div class="mb-3 p-1">
                    <label asp-for="PhoneNumber" class="p-0"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        @if (Model.Id == 0)
                        {
                            <button type="submit" class="btn btn-primary form-control">Create</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control">Update</button>
                        }


                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Company" asp-action="Index" class="btn btn-outline-info form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
    @{
        <partial name="_ValidationScriptsPartial" />
    }

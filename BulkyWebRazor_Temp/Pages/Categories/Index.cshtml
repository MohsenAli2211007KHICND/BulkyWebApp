@page
@model BulkyWebRazor_Temp.Pages.Categories.IndexModel
@*<partial name="_Notifications" />
*@
    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
            <h2>Category list</h2>
            </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var cat in Model.CategoryList.OrderBy(u => u.DisplayOrder)){
            Console.WriteLine(Model);
            <tr>
            <td>@cat.Name</td>
            <td>@cat.DisplayOrder</td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-page="/categories/edit" asp-route-id="@cat.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                    </a>
                        <a asp-page="/categories/delete" asp-route-id="@cat.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>
